{% extends 'base.html.twig' %}

{% block bodyClass %}
    hold-transition register-page
{% endblock %}

{% block body %}
    <h1 class="text-center">Edit a grade</h1>

    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="box-body">
                <div class="form-group row">
                    {{ form_label(form.grade, 'Grade :', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.grade, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    {{ form_label(form.comment, 'Comment :', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.comment, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    {{ form_label(form.lesson, 'Lesson :', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.lesson, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    {{ form_label(form.user, 'User :', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="login_center">
                    <button type="submit" class="btn btn-primary login_btn">Edit</button>
                    <button class="btn btn-default login_btn"><a href="{{ path('grade') }}">Return</a></button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}